@model List<SuperMarketMini.Areas.Admin.Models.GraphData>
@{
    ViewBag.Title = "Statistical";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<SelectListItem> _list = new List<SelectListItem>();
    SelectListItem _item1 = new SelectListItem() { Text = "Order", Value = "1" };
    SelectListItem _item2 = new SelectListItem() { Text = "Product", Value = "2" };
    _list.Add(_item1);
    _list.Add(_item2);
    List<SelectListItem> _quality = new List<SelectListItem>();
    SelectListItem _item3 = new SelectListItem() { Text = "10", Value = "10" };
    SelectListItem _item4 = new SelectListItem() { Text = "20", Value = "20" };
    SelectListItem _item5 = new SelectListItem() { Text = "30", Value = "30" };
    _quality.Add(_item3);
    _quality.Add(_item4);
    _quality.Add(_item5);
    List<SelectListItem> _sort = new List<SelectListItem>();
    SelectListItem _item6 = new SelectListItem() { Text = "ASC", Value = "ASC" };
    SelectListItem _item7 = new SelectListItem() { Text = "DESC", Value = "DESC" };
    SelectListItem _item8 = new SelectListItem() { Text = "--None--", Value = "1" };
    _sort.Add(_item8);
    _sort.Add(_item6);
    _sort.Add(_item7);
}


<div class="form-w3layouts">
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <label> Statistical </label>
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-cog" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="cmxform form-horizontal">

                        <div style="text-align:center">

                            <div class="form-group ">
                                <label class="control-label col-lg-1">Type</label>
                                <div class="col-lg-5">
                                    @Html.DropDownList("Type", _list, new
                                    {
                                        @id = "idType",
                                        @class = "form-control",
                                        @onclick = "if(this.value=='1'){document.getElementById('User').style.display='block';document.getElementById('product').style.display='none' } " +
"else {document.getElementById('User').style.display='none';document.getElementById('product').style.display='block' }"
                                    })
                                </div>
                                <div id="User">
                                    <label for="firstname" class="control-label col-lg-1">Username</label>
                                    <div class="col-lg-5">
                                        @Html.DropDownList("ListUser", null, new { @class = "form-control", @id = "idListUser" })
                                    </div>
                                </div>
                                <div id="product" style="display:none">
                                    <label for="firstname" class="control-label col-lg-1">Product</label>
                                    <div class="col-lg-5">
                                        @Html.DropDownList("ListProduct", null, new { @class = "form-control", @id = "idListProduct" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="firstname" class="control-label col-lg-1">From:</label>
                            <div class="col-lg-5">
                                <input class="form-control" type="date" id="idStart" name="start" />
                            </div>
                            <label for="firstname" class="control-label col-lg-1">To:</label>
                            <div class="col-lg-5">
                                <input class="form-control" type="date" id="idEnd" name="end" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="firstname" class="control-label col-lg-1">Select</label>
                            <div class="col-lg-5">
                                @Html.DropDownList("Quality", _quality, new
                                {
                                    @class = "form-control",
                                    @id = "idQuality"
                                })
                            </div>
                            <label for="firstname" class="control-label col-lg-1">Sort</label>
                            <div class="col-lg-5">
                                @Html.DropDownList("Sort", _sort, new
                                {
                                    @class = "form-control",
                                    @id = "idSort"
                                })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-5 col-lg-8">
                                <button class="btn btn-warning" type="reset">Reset</button>
                                <button class="btn btn-success" type="submit" onclick="inputDraw();">View</button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="panel-body">
            <div class="col-md-12">
                <div class="col-md-3" id="TotalSell"></div>
                <div class="col-md-3"  id="TotalBuy"></div>
                <div class="col-md-3"  id="Revenue"></div>
                <div class="col-md-3"  id="TotalOrder"></div>
               
            </div>
            <div class="col-md-12 w3ls-graph">
                <!--agileinfo-grap-->
                <div class="agileinfo-grap">
                    <div class="agileits-box">
                        <header class="agileits-box-header clearfix">
                            <h3 id="titleStatistical">Statistical Revenue</h3>
                            <div class="toolbar">


                            </div>
                        </header>
                        <div class="agileits-box-body clearfix">
                            <div id="statistical"></div>
                        </div>
                    </div>
                </div>
                <!--//agileinfo-grap-->

            </div>
        </div>
    </div>
</div>
<script>
    
</script>