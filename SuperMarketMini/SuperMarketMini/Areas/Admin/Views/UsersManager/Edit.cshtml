@model SuperMarketMini.Domain.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<SelectListItem> _list = new List<SelectListItem>();
    SelectListItem _item1 = new SelectListItem() { Text = "Active", Value = "1" };
    SelectListItem _item2 = new SelectListItem() { Text = "Pending", Value = "2" };
    SelectListItem _item3 = new SelectListItem() { Text = "Banned", Value = "3" };
    _list.Add(_item1);
    _list.Add(_item2);
    _list.Add(_item3);
    if (String.IsNullOrEmpty(Model.Images))
    {
        Model.Images = "/Images/Users/user.png";
    }
}

<script type="text/javascript">

    function check() {
        var password = $('#password').val();
        var repassword = $('#repassword').val();
        if (!($.trim(repassword) == $.trim(password))) {
            document.getElementById('errors').innerHTML = 'Confirm password wrong !!';
        }
        else {
            document.getElementById('errors').innerHTML = '';
            document.getElementById('success').innerHTML = 'Confirm password success';
        }
    }
</script>
<div class="form-w3layouts">
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    About information user
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-cog" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </header>
                <hr />
                <a href="/Admin/UsersManager" class="btn btn-danger">Back to list</a>
                <hr />
                <div class="panel-body">
                    <div class="form">
                        <div style="text-align:center">
                            @using (Html.BeginForm("Edit", "UsersManager", FormMethod.Post, new { @class = "cmxform form-horizontal", @id = "signupForm" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                //Hide
                                @Html.HiddenFor(model => model.Username)
                                <img src="@Model.Images" width="120" height="120" id="imgDisplay" /><br /><br />
                                <div class="form-group ">
                                    <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Username)</label>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.Username)" />
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Password)</label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "password", @onfocus = "this.value = '';", @onblur = "if (this.value == '') {this.value = 'Password';}" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="lastname" class="control-label col-lg-3">Confirm password</label>
                                    <div class="col-lg-6">
                                        <input class="form-control" value="" id="repassword" name="password" type="password" onkeyup="check();" onblur="$('#errors').html(''); $('#success').html('');">
                                        <div class="text-danger" id="errors"></div>
                                        <div class="text-success" id="success"></div>
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.Email)
                                <div class="form-group ">
                                    <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Email)</label>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.Email)" />
                                    </div>
                                </div>

                                @Html.HiddenFor(model => model.Images)
                                  @Html.HiddenFor(model => model.Address1)

                                @Html.HiddenFor(model => model.Address2)
                                @Html.HiddenFor(model => model.Phone)

                                @Html.HiddenFor(model => model.Birthday)
                                @Html.HiddenFor(model => model.DisplayName)
                                <div class="form-group ">
                                    <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.DisplayName)</label>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.DisplayName)" />
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Point)</label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(model => model.Point, new { @type = "text", @class = "form-control", @maxlength = "6" })
                                        @Html.ValidationMessageFor(model => model.Point, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Trust)</label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(model => model.Trust, new { @type = "text", @class = "form-control",@maxlength = "6" })
                                        @Html.ValidationMessageFor(model => model.Trust, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @Html.HiddenFor(model => model.Sex)
                                @Html.HiddenFor(model => model.Created)
                                <div class="form-group ">
                                    <label class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Status)</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownList("Status", _list, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-lg-3">Role</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownList("TypeID", null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-success" type="submit">Save</button>
                                        <button class="btn btn-default" type="reset">Reset</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
