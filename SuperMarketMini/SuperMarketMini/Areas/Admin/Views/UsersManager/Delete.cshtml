@model SuperMarketMini.Domain.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<SelectListItem> _list = new List<SelectListItem>();
    SelectListItem _item1 = new SelectListItem() { Text = "Active", Value = "1" };
    SelectListItem _item2 = new SelectListItem() { Text = "Pending", Value = "2" };
    SelectListItem _item3 = new SelectListItem() { Text = "Banned", Value = "3" };
    _list.Add(_item1);
    _list.Add(_item2);
    _list.Add(_item3);
}
<div class="form-w3layouts">
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Confirm delete user
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-cog" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </header>
                <hr />
                <div style="margin-left:40px">
                    <a href="/Admin/UsersManager" class="btn btn-default col-md-2">Back to list</a>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger col-md2" />
                    }
                </div>
                <hr />

                <div class="panel-body">
                    <div class="form">
                        <form class="cmxform form-horizontal">
                            <div class="form-group ">
                                <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Username)</label>
                                <div class="col-lg-6">
                                    <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.Username)" />
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Password)</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @id = "password", @onfocus = "this.value = '';", @onblur = "if (this.value == '') {this.value = 'Password';}" })
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.Email)
                            <div class="form-group ">
                                <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Email)</label>
                                <div class="col-lg-6">
                                    <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.Email)" />
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="firstname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.DisplayName)</label>
                                <div class="col-lg-6">
                                    <input class="form-control" type="text" disabled="disabled" value="@Html.DisplayFor(model=>model.DisplayName)" />
                                </div>
                            </div>

                            <div class="form-group ">
                                <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Point)</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Point, new { @type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Point, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="lastname" class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Trust)</label>
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Trust, new { @type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Trust, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="control-label col-lg-3">@Html.DisplayNameFor(model => model.Status)</label>
                                <div class="col-lg-6">
                                    @Html.DropDownList("Status", _list, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3">Role</label>
                                <div class="col-lg-6">
                                    @Html.DropDownList("TypeID", null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
